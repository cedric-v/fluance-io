              <div class="flex items-center gap-2">
                {% set currentUrl = page.url %}
                {% if currentUrl == '/en/' %}
                  {% set targetUrl = '/' %}
                {% elif currentUrl == '/en/member-login/' %}
                  {% set targetUrl = '/connexion-membre/' %}
                {% elif currentUrl == '/en/create-account/' %}
                  {% set targetUrl = '/creer-compte/' %}
                {% elif currentUrl == '/en/reset-password/' %}
                  {% set targetUrl = '/reinitialiser-mot-de-passe/' %}
                {% else %}
                  {% set targetUrl = currentUrl | replace('/en/', '/') %}
                {% endif %}
                <span class="text-[#E6B84A] font-semibold">English</span>
                <span class="text-[#E6B84A]/40">|</span>
                <a href="{{ targetUrl | relativeUrl }}" class="text-[#E6B84A]/80 hover:text-[#E6B84A] transition">Français</a>
              </div>
            </li>
            {% else %}
            <li><a href="{{ '/' | relativeUrl }}" class="hover:text-[#E6B84A]">Accueil</a></li>
            <li><a href="{{ '/a-propos/philosophie/' | relativeUrl }}" class="hover:text-[#E6B84A]">A propos</a></li>
