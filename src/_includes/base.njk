        https://region1.analytics.google.com
        https://*.analytics.google.com
        https://www.google.com
        https://*.google.com
        https://www.google.ch
        https://*.google.ch
        https://*.googleapis.com 
        https://*.gstatic.com 
        https://challenges.cloudflare.com 
        https://*.cloudflare.com
